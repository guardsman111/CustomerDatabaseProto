@page
@model DisplayModel
@{
    ViewData["Title"] = "Display Database";
}
<h1>@ViewData["Title"]</h1>

<p>Below you will see all entries in the Customer Database.</p>

<table class="table">
    <thead>
        <tr class="bg-primary">
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.data != null)
        {
            foreach(var item in Model.data)
            {
                <tr class ="bg-light">
                    <td class="left">@item.FirstName</td>
                    <td class="left">@item.LastName</td>
                </tr>
            }
        }
    </tbody>
</table>

<p>@Model.data[0].FirstName</p>
