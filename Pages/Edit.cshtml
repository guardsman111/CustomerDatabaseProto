@page
@model EditModel
@{
    ViewData["Title"] = "Display Database";
}
<h1>@ViewData["Title"]</h1>

<p>Below you will see all entries in the Customer Database.</p>

<table class="table">
    <thead>
        <tr class="bg-primary">
            <th>First Name</th>
            <th>Last Name</th>
            <th>ID number</th>
            <th>Delete?</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.data != null)
        {
            foreach(var item in Model.data)
            {
                <tr class="bg-light">
                    <form method="post">
                        <td>
                            <input type="text" name="FirstName" value="@item.FirstName"/>
                        </td>
                        <td>
                            <input type="text" name="LastName" value="@item.LastName" />
                        </td>
                        <td>
                            <input type="text" name="Id" value="@item.Id" readonly/>
                        </td>
                        <td class="left">
                            <input type="submit" value="Submit" class="submit" />
                        </td>
                    </form>
                </tr>
            }
        }
    </tbody>
</table>
